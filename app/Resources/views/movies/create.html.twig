{% extends 'base.html.twig' %}
{% block title %}
    {% trans %}create.header {% endtrans %}
{% endblock %}
{% block body %}
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3>{% trans %}create.title {% endtrans %}
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a href="{{ logout_path() }}" class="btn btn-danger pull-right" style="margin-left:10px;">{% trans %}create.logout {% endtrans %}</a>
                {% endif %}
            </h3>
        </div>
        <div class="panel-body">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}